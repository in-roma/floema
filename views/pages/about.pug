extends ../template.pug

block variables
     - var template = 'about'

block content
    .about 
     .about__wrapper 
          section.about__gallery
           .about___gallery__wrapper 
            each media in about.data.gallery
             figure.about__gallery__media 
              img.about__gallery__media__image(alt=media.image.alt src=media.image.url)

          each section in about.data.body 
           if section.slice_type == "title"
            h2.about__title=section.primary.title1

           if section.slice_type == "content"
            section.about__content
             .about__content__wrapper      
              p.about__content__label=section.primary.label
              p.about__content__description=section.primary.description
              
              figure.about__content__media
               img.about__content__media__image(alt=section.primary.image.alt src=section.primary.image.url)

           if section.slice_type == "highlights"
            section.about__highlights
             .about__highlights__wrapper
              if section.primary.label
               p.about__highlights__description=section.primary.description

              h3.about__highlights__title=section.primary.title1

              each media in section.items
               figure.about__highlights__media
                img.about__highlights__media__image(alt=media.image.alt src=media.image.url)

           if section.slice_type == "gallery"
            section.about__gallery
             .about___gallery__wrapper 
             each media in section.items 
              figure.about__gallery__media 
               img.about__gallery__media__image(alt=media.image.alt src=media.image.url)